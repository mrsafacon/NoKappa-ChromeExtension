{
  "manifest_version": 2,

  "name": "No Kappa",
  "description": "Toggle Twitch emotes on/off. ",
  "version": "1.0.1",

  "browser_action": {
   "default_icon": "icons/hide32.png"
  },
  "permissions": [
   "activeTab",
   "tabs",
   "*://*/*",
   "storage"
 ],
  "background":{
    "scripts": ["background.js"]
  }
}
