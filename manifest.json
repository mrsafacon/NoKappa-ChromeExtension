{
  "manifest_version": 2,

  "name": "No Kappa",
  "description": "Toggle Twitch emotes on/off. ",
  "version": "1.0.2",

  "browser_action": {
   "default_icon": "icons/hide32.png"
  },
  "permissions": [
   "activeTab",
   "tabs",
   "*://*/*",
   "storage"
 ],
  "background":{
    "scripts": ["background.js"]
  },
  "icons": { "16": "icons/hide16.png",
           "32": "icons/hide32.png",
          "128": "icons/webstore-icon.png" }
}
